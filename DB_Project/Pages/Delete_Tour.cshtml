@page 
@model DB_Project.Pages.Delete_TourModel
@{
    ViewData["Title"] = "Delete Tour";
}
<div class="container mt-5">
    <h2 class="mb-4 text-center">Delete Tour</h2>
    <div class="card shadow p-4">
        <h5 class="text-danger">Are you sure you want to delete this tour?</h5>
        <div class="mt-4">
            <dl class="row">
                <dt class="col-sm-4">Destination:</dt>
                <dd class="col-sm-8">Fayoum</dd>

                <dt class="col-sm-4">Price:</dt>
                <dd class="col-sm-8">750</dd>

                <dt class="col-sm-4">Start Date:</dt>
                <dd class="col-sm-8">2025-03-01</dd>

                <dt class="col-sm-4">End Date:</dt>
                <dd class="col-sm-8">2025-03-05</dd>
            </dl>
        </div>
        <form method="post">
            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="/Employee" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    h5 {
        color: #d9534f;
        font-weight: bold;
    }

    .btn-danger, .btn-secondary {
        padding: 10px 20px;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .gap-2 {
        gap: 10px; /* Space between buttons */
    }
</style>
