</head>
<body>
    <!-- header-start -->
    <header>
        <div class="header-area ">
            <div id="sticky-header" class="main-header-area">
                <div class="container-fluid">
                    <div class="header_bottom_border">
                        <div class="row">
                            <style >
                                #navigation
                                {
                                position: absolute;
                                right: 0;
                                }
                            </style>
                            <div class="col-xl-2 col-lg-2">
                                <div class="logo">
                                    <a href="/Index">
                                        <img src="img/logoo.png" alt="" height="60px">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-10 col-lg-10">
                                <div class="main-menu  d-none d-lg-block">
                                    <nav>
                                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                            <ul id="navigation">
                                                <li class=" nav-item">
                                                    <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                                                </li>
                                                <li class=" nav-item">
                                                    <a class="nav-link" asp-area="" asp-page="/Destination">Destination</a>
                                                </li>
                                                <li class=" nav-item">
                                                    <a class="nav-link" asp-area="" asp-page="/about">About</a>
                                                </li>
                                                <li class=" nav-item">
                                                    <a class="nav-link" asp-area="" asp-page="/contact">Contact us</a>
                                                </li> 
                                                @if (DB.Islogged)
                                                {
                                                    // Assuming UserTypeAOU is available and determined for the logged-in user
                                                    int userTypeAOU = DB.GetUserTypeAOU();
                                                    if (userTypeAOU == 1)
                                                    {
                                                        <li class="nav-item">
                                                            <a class="nav-link" asp-area="" asp-page="/Employee">Employee</a>
                                                        </li>
                                                    }
                                                    else if (userTypeAOU == 2)
                                                    {
                                                        <li class="nav-item">
                                                            <a class="nav-link" asp-area="" asp-page="/Profile">Profile</a>
                                                        </li>
                                                    }
                                                }
                                                else
                                                {
                                                    <li class="nav-item">
                                                        <a class="nav-link" asp-area="" asp-page="/login">Login</a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>

    @RenderBody()


    <footer class="footer">
        <div class="footer_top">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-md-6 col-lg-4 ">
                        <div class="footer_widget">
                            <div class="footer_logo">
                                <a href="#">
                                    <img src="img/footerlogo.png" alt="" height="200px">
                                </a>
                            </div>
                            <p>
                                Building 423 Area H Hadayek Alahram,  <br> Giza Governorate 12572 <br>
                                <a href="#">+20 111 140 1472</a> <br>
                                <a href="#">eslamattia@gmail.com</a>
                            </p>
                            <div class="socail_links">
