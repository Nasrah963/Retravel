    <style>
        .activity-row input[type="checkbox"],
        .activity-row .activity-name {
            margin-right: 10px;
        }

        .styleSelect {
            position: absolute;
            z-index: 10;
            width: 400px;
            height: 40px;
            border: 1px solid #1338BE;
        }

        .details-box {
            margin-top: 10px;
            padding: 10px;
            background-color: #f1f1f1;
            text-align: center;
            display: none;
            font-size: 16px;
            color: black;
        }
    </style>

    <script>
        function showDetails(day) {
            var selectBox = document.getElementById("day-" + day + "-select");
            var details = document.getElementById("day-" + day + "-details");

            if (selectBox.value !== "10") {
                details.innerHTML = "Details for Activity " + selectBox.value;
                details.style.display = "block";
                details.addEventListener("click", function () {
                    redirectToAnotherPage(day);
                });
            }
            else {
                details.style.display = "none";
            }
        }
        function redirectToAnotherPage(day) {
            window.location.href = "/Destination_details";
        }
    </script>

</head>

